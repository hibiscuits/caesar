@ffi("C")
extern unsafe fn printf(fmt: &byte, ...) -> int

trait SayHi
    fn sayHi(self: &SayHi)

struct Man
    name: &byte
    dog: &Dog

struct Dog
    name: &byte
    breed: &byte

impl Man: SayHi
    fn sayHi(self: &Man)
        unsafe printf("Hello! My name is %s. This is my dog, %s! He's a %s.\n"
            self^.name, self^.dog^.name, self^.dog^.breed)

impl Dog: SayHi
    fn sayHi(self: &Dog)
        unsafe printf("WOOF!\n")

fn sayHi(entity: &SayHi)
    entity^->sayHi

fn main()
    let dog = Dog { name: "Lego", breed: "golden retriever" }
    let man = Man { name: "James", dog: &dog}
    
    sayHi(&man)
    sayHi(&dog)